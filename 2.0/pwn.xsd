<!DOCTYPE xsd:schema
[
<!ENTITY lemma "[a-zA-Z0-9_'/\-\.]+">
<!ENTITY lexsense "\d+:\d+:\d+:[a-zA-Z0-9_'/\-\.]*:\d*">
]>
<xsd:schema xmlns:xsd='http://www.w3.org/2001/XMLSchema' 
	xmlns:pwn='http://www.princeton.edu/wordnet/'
	targetNamespace='http://www.princeton.edu/wordnet/'
	>

	<!-- types -->

	<xsd:simpleType name='SenseKeyType'>
		<xsd:restriction base='xsd:string'>
			<xsd:pattern value='&lemma;\%&lexsense;' />
		</xsd:restriction>
	</xsd:simpleType>

	<!-- attributes -->

	<xsd:attribute name='sensekey' type='pwn:SenseKeyType' />

</xsd:schema>



